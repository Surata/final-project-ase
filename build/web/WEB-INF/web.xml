<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>GRZLogin</servlet-name>
        <servlet-class>Controller.GRZLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GRZAddProduct</servlet-name>
        <servlet-class>Controller.GRZAddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GRZAuthetication</servlet-name>
        <servlet-class>Controller.GRZAuthetication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GRZLogout</servlet-name>
        <servlet-class>Controller.GRZLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GRZRegisterUser</servlet-name>
        <servlet-class>Controller.GRZRegisterUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GRZValidationUtil</servlet-name>
        <servlet-class>Controller.GRZValidationUtil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GRZLogin</servlet-name>
        <url-pattern>/GRZLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GRZAddProduct</servlet-name>
        <url-pattern>/GRZAddProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GRZAuthetication</servlet-name>
        <url-pattern>/GRZAuthetication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GRZLogout</servlet-name>
        <url-pattern>/GRZLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GRZRegisterUser</servlet-name>
        <url-pattern>/GRZRegisterUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GRZValidationUtil</servlet-name>
        <url-pattern>/GRZValidationUtil</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
